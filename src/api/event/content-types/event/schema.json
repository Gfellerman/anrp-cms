{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Events related to projects (races, track days)"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "result": {
      "type": "string"
    },
    "notes": {
      "type": "richtext"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "mappedBy": "events"
    }
  }
}
