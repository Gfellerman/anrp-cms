{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": "Main car projects"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "engine": {
      "type": "string"
    },
    "power": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Planning", "In Progress", "Completed", "Paused"],
      "default": "Planning"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "description": {
      "type": "richtext"
    },
    "specifications": {
      "type": "json"
    },
    "galleries": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::gallery.gallery",
      "mappedBy": "project"
    },
    "project_updates": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project-update.project-update",
      "mappedBy": "project"
    },
    "events": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::event.event",
      "inversedBy": "projects"
    },
    "race_results": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::race-result.race-result",
      "mappedBy": "project"
    },
    "media_mentions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::media-mention.media-mention",
      "mappedBy": "project"
    }
  }
}
